{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all workshop resources."
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "SQLServer-NIC",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "PublicIPConfiguration",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'production-vnet', 'database')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', 'SQLServer-IP')]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[concat('Microsoft.Network/publicIpAddresses/', 'SQLServer-IP')]"
            ]
        },
        {
            "type": "Microsoft.Network/publicIpAddresses",
            "sku": {
                "name": "Basic"
            },
            "name": "SQLServer-IP",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "publicIpAllocationMethod": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "SQLServer",
            "apiVersion": "2018-06-01",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B1ms"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        },
                        "name": "SQLServer-OSDisk"
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'SQLServer-NIC')]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "SQLServer",
                    "adminUsername": "remoteadmin",
                    "adminPassword": "P4ssw0rd123",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', 'SQLServer-NIC')]"
            ]
        },
        {
            "type": "Microsoft.DevTestLab/schedules",
            "name": "[concat('shutdown-computevm-', 'SQLServer')]",
            "apiVersion": "2017-04-26-preview",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "status": "Disabled",
                "taskType": "ComputeVmShutdownTask",
                "dailyRecurrence": {
                    "time": "18:30"
                },
                "timeZoneId": "UTC",
                "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines', 'SQLServer')]",
                "notificationSettings": {
                    "status": "Disabled",
                    "notificationLocale": "en",
                    "timeInMinutes": "30"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', 'SQLServer')]"
            ]
        },
        {
            "apiVersion": "2018-06-01",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat('SQLServer','/', 'InstallWebServer')]",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.1",
                "autoUpgradeMinorVersion":true,
                "settings": {
                    "ModulesURL": "https://raw.githubusercontent.com/mspnp/reference-architectures/master/scripts/windows/dsc/iisaspnet.ps1.zip",
                    "configurationFunction": "iisaspnet.ps1\\iisaspnet"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', 'SQLServer')]"
            ]
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "String",
            "value": "remoteadmin"
        }
    }
}